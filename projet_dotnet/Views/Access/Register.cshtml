@model User
@{
    ViewBag.Title = "Register";
}

@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"] </span>
    </div>
}

<div class="card" style="margin:20px">
    <div class="card-body">
        <h2 class="card-title">Register</h2>
        <h5 class="card-subtitle mb-2 text-muted"></h5>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <table class="table table-borderless">
                <tr>
                    <td>First name </td>
                    <td>@Html.TextBox("first_name")</td>
                </tr>
                <tr>
                    <td>Last name </td>
                    <td>@Html.TextBox("last_name")</td>
                </tr>
                <tr>
                    <td>Email </td>
                    <td>@Html.TextBox("email")</td>
                </tr>
                <tr>
                    <td>Password </td>
                    <td>@Html.TextBox("password")</td>
                </tr>
                <tr>
                    <td>Address </td>
                    <td>@Html.TextBox("address")</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Register" class="btn btn-outline-secondary" /></td>
                </tr>
            </table>
        }
    </div>
