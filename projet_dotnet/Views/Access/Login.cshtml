@{
    ViewBag.Title = "Login";
}

@{
    Layout = "_Layout";
}

@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"] </span>
    </div>
}

<div class="card" style="margin:20px">
    <div class="card-body">
        <h2 class="card-title">Login</h2>
        <h5 class="card-subtitle mb-2 text-muted"></h5>
        @using (Html.BeginForm("Login", "Access", FormMethod.Post))
        {
            <table class="table table-borderless">
                <tr>
                    <td>Email </td>
                    <td>@Html.TextBox("email")</td>
                </tr>
                <tr>
                    <td>Password </td>
                    <td>@Html.TextBox("password")</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Login" class="btn btn-outline-secondary" /></td>
                </tr>
            </table>
        }
        <h5>
            New student?
            <a href="/Access/Register">Register here</a>
        </h5>
    </div>